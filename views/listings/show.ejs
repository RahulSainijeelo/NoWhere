<%layout("/layouts/boilerplate")%>
<div class="showBody">
  <div class="showbd">
    <div class="shodivim">
      <img class="showdim" src="<%= listItem.image.url %>" alt="refimg" />
    </div>
    <div class="showtitl showdt">
      <p><%=listItem.title.toUpperCase() %></p>
    </div>
    <span class="showdt">
      <p>location: <%=listItem.location%>, <%=listItem.country%></p>
    </span>
    <hr />
    <div class="showdt">
      <p><%= listItem.description %></p>
    </div>
    <% if (currUser && currUser._id.equals(listItem.owner)) { %>
    <div>
      <a class="showedit" href="/listings/<%=listItem._id  %>/edit">Edit</a>
      <form
        class="showdlb"
        method="post"
        action="/listings/<%= listItem._id %>?_method=DELETE"
      >
        <button class="showdlb">Delete</button>
      </form>
    </div>
    <%}%>
  </div>
  <% if (currUser) { %>
  <div class="showbd">
    <h3 class="showdt">Leave a review</h3>
    <form
      id="myForm"
      class="showdt"
      action="/listings/<%= listItem._id %>/review"
      method="post"
      novalidate
    >
      <p>Rating</p>
      <fieldset class="starability-fade">
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible"></label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good"></label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average"></label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good"></label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing"></label>
      </fieldset>
      <label for="commentshow">Review</label>
      <textarea
        class="inpnew leaveReview"
        type="text"
        name="review[comment]"
        id="commentshow"
        style="
          min-height: 100px;
          max-height: 300px;
          width: 30vw;
          overflow-y: hidden;
          display: block;
          resize: none;
          padding: 5px;
        "
        contenteditable="true"
        required
      ></textarea>
      <div class="error"></div>
      <button class="newbtn">Submit</button>
    </form>
  </div>
  <%}%> <%- include("../includes/review.ejs") %>
</div>
